<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="computomovil.alumnoscrud">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".controllers.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".controllers.StudentsListActivity"
            android:label="@string/app_name" />
        <activity android:name=".controllers.CreateStudentActivity" />
        <activity android:name=".controllers.EditStudentActivity" />
        <activity android:name=".controllers.ViewStudentActivity"></activity>
    </application>

</manifest>